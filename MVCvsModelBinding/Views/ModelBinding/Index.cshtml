@model MVCvsModelBinding.Models.SunshinePeople
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Confirm Your Appointment Today!</h1>
<br />

<form method="post" class="text-center">
    <label asp-for="FullName"></label>
    <input asp-for="FullName" />
    <span asp-validation-for="FullName"></span>
	<br />

    <label asp-for="DateOfBirth"></label>
    <input asp-for="DateOfBirth" />
    <span asp-validation-for="DateOfBirth"></span>
	<br />

    <label asp-for="AppointmentDate"></label>
    <input asp-for="AppointmentDate" />
    <span asp-validation-for="AppointmentDate"></span>
	<br />

    <input type="submit" class="btn btn-secondary" value="Create SunshinePeople" />
</form>

